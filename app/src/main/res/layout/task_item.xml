<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/taskName"
        android:text="Edit"
        android:layout_height="wrap_content" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/editButton"
        android:layout_alignTop="@id/taskName"
        android:text="Delete"
        android:layout_height="wrap_content" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/deleteButton"
        android:layout_alignTop="@id/taskName"
        android:text="Done"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:layout_toRightOf="@id/doneButton" />
    <TextView
        android:id="@+id/time"
        android:layout_alignTop="@id/taskName"
        android:layout_alignBottom="@id/taskName"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/hardFinishDate"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>